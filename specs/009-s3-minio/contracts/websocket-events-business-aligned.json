        "payload": {
          "threadId": {
            "type": "string",
            "format": "uuid"
          },
          "userId": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "cancel_upload": {
        "description": "Cancel ongoing file upload",
        "payload": {
          "sessionId": {
            "type": "string",
            "format": "uuid"
          },
          "fileId": {
            "type": "string",
            "format": "uuid",
