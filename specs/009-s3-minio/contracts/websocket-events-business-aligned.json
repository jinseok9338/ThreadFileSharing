      "thread_typing_stop": {
        "description": "Stop typing in thread",
        "payload": {
          "threadId": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "share_thread": {
        "description": "Share thread with user",
        "payload": {
          "threadId": {
            "type": "string",
            "format": "uuid"
          },
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "threadRole": {
            "type": "string",
            "enum": ["MEMBER", "VIEWER"]
          },
          "message": {
            "type": "string",
            "description": "Optional sharing message"
          }
        }
      },
      "add_thread_participant": {
        "description": "Add participant to thread",
        "payload": {
          "threadId": {
            "type": "string",
            "format": "uuid"
          },
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "threadRole": {
            "type": "string",
            "enum": ["OWNER", "MEMBER", "VIEWER"]
          }
        }
      },
      "update_thread_participant": {
        "description": "Update thread participant role",
        "payload": {
          "threadId": {
            "type": "string",
            "format": "uuid"
          },
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "threadRole": {
            "type": "string",
            "enum": ["OWNER", "MEMBER", "VIEWER"]
          }
        }
      },
      "remove_thread_participant": {
