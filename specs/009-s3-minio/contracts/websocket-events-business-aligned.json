{
  "title": "ThreadFileSharing - Business-Aligned WebSocket Events",
  "version": "3.0.0",
  "description": "Unified WebSocket events aligned with ThreadFileSharing business logic",
  "events": {
    "client_to_server": {
      "join_company": {
        "description": "Join company-wide notifications and status updates",
        "payload": {
          "companyId": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "join_chatroom": {
        "description": "Join chatroom for messaging and file sharing",
        "payload": {
          "chatroomId": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "join_thread": {
        "description": "Join thread for focused file discussion",
        "payload": {
          "threadId": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "join_upload_session": {
        "description": "Join upload session for progress tracking",
        "payload": {
          "sessionId": {
            "type": "string",
            "format": "uuid"
          },
          "context": {
            "type": "object",
            "properties": {
              "chatroomId": {
                "type": "string",
                "format": "uuid",
                "description": "If uploading to chatroom"
              },
              "threadId": {
                "type": "string",
                "format": "uuid",
                "description": "If uploading to thread"
              },
              "action": {
                "type": "string",
                "enum": ["SHARE_FILE", "CREATE_THREAD"],
                "description": "Upload action type"
              }
            }
          }
        }
      },
      "leave_company": {
        "description": "Leave company notifications",
        "payload": {
          "companyId": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "leave_chatroom": {
        "description": "Leave chatroom",
        "payload": {
          "chatroomId": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "leave_thread": {
        "description": "Leave thread",
        "payload": {
          "threadId": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "leave_upload_session": {
        "description": "Leave upload session",
        "payload": {
          "sessionId": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "send_chatroom_message": {
        "description": "Send message to chatroom",
        "payload": {
          "chatroomId": {
            "type": "string",
            "format": "uuid"
          },
          "content": {
            "type": "string"
          },
          "messageType": {
            "type": "string",
            "enum": ["TEXT", "SYSTEM"],
            "default": "TEXT"
          },
          "replyToId": {
            "type": "string",
            "format": "uuid",
            "description": "Message being replied to"
          }
        }
      },
      "send_thread_message": {
        "description": "Send message to thread",
        "payload": {
          "threadId": {
            "type": "string",
            "format": "uuid"
          },
          "content": {
            "type": "string"
          },
          "messageType": {
            "type": "string",
            "enum": ["TEXT", "SYSTEM"],
            "default": "TEXT"
          },
          "replyToId": {
            "type": "string",
            "format": "uuid",
            "description": "Message being replied to"
          }
        }
      },
      "edit_chatroom_message": {
        "description": "Edit message in chatroom",
        "payload": {
          "messageId": {
            "type": "string",
            "format": "uuid"
          },
          "content": {
            "type": "string"
          }
        }
      },
      "edit_thread_message": {
        "description": "Edit message in thread",
        "payload": {
          "messageId": {
            "type": "string",
            "format": "uuid"
          },
          "content": {
            "type": "string"
          }
        }
      },
      "delete_chatroom_message": {
        "description": "Delete message in chatroom",
        "payload": {
          "messageId": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "delete_thread_message": {
        "description": "Delete message in thread",
        "payload": {
          "messageId": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "chatroom_typing_start": {
        "description": "Start typing in chatroom",
        "payload": {
          "chatroomId": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "chatroom_typing_stop": {
        "description": "Stop typing in chatroom",
        "payload": {
          "chatroomId": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "thread_typing_start": {
