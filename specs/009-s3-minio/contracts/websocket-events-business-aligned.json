  "room_management": {
    "hierarchical_rooms": {
      "description": "Business-aligned room hierarchy",
      "patterns": {
        "company": {
          "pattern": "company:{companyId}",
          "description": "Company-wide notifications and status",
          "example": "company:123e4567-e89b-12d3-a456-426614174000",
          "inheritance": "All company users automatically inherit"
        },
        "chatroom": {
          "pattern": "chatroom:{chatroomId}",
          "description": "Chatroom messaging and file sharing",
          "example": "chatroom:123e4567-e89b-12d3-a456-426614174000",
          "inheritance": "Chatroom members only"
        },
        "thread": {
          "pattern": "thread:{threadId}",
          "description": "Thread messaging and file discussion",
          "example": "thread:123e4567-e89b-12d3-a456-426614174000",
          "inheritance": "Thread participants only"
        },
        "upload_session": {
          "pattern": "upload_session:{sessionId}",
          "description": "File upload progress tracking",
          "example": "upload_session:123e4567-e89b-12d3-a456-426614174000",
          "inheritance": "Upload participants and observers"
        },
        "user_session": {
