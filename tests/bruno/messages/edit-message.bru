meta {
  name: Edit Message
  type: http
  seq: 3
}

put {
  url: {{base_url}}/api/v1/messages/{{message_id}}
  body: json
  auth: bearer
}

auth:bearer {
  token: {{auth_token}}
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "content": "This message has been edited!"
  }
}

tests {
  test("Status code is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response has success field", function() {
    expect(res.getBody().success).to.equal(true);
  });
  
  test("Response has message field", function() {
    expect(res.getBody().message).to.equal("Message edited successfully");
  });
  
  test("Response has data field", function() {
    expect(res.getBody().data).to.be.an('object');
  });
  
  test("Message content is updated", function() {
    const message = res.getBody().data;
    expect(message.content).to.equal("This message has been edited!");
  });
  
  test("Message is marked as edited", function() {
    const message = res.getBody().data;
    expect(message.isEdited).to.equal(true);
    expect(message.editedAt).to.not.be.null;
  });
}
