meta {
  name: Test Results API
  type: http
  seq: 3
}

get {
  url: {{API_BASE_URL}}/test/results/{{testId}}
  body: none
  auth: inherit
  params {
    includeMetrics: true
    includeLogs: true
    includeErrors: true
  }
}

get {
  url: {{API_BASE_URL}}/test/results
  body: none
  auth: inherit
  params {
    scenarioId: {{scenarioId}}
    userId: {{userId}}
    status: PASSED
    startTime: {{startTime}}
    endTime: {{endTime}}
    limit: 100
    offset: 0
  }
}

post {
  url: {{API_BASE_URL}}/test/results/{{testId}}/export
  body: json
  auth: inherit
  params {
    format: json
    includeDetails: true
  }
}

