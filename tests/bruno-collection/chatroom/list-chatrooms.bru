  test("Response has success field", function() {
    expect(res.getBody().success).to.equal(true);
  });
  
  test("Response has message field", function() {
    expect(res.getBody().message).to.equal("Chatrooms retrieved successfully");
  });
  
  test("Response has data field", function() {
    expect(res.getBody().data).to.be.an('object');
  });
  
  test("Data has chatrooms array", function() {
    const data = res.getBody().data;
    expect(data).to.have.property('chatrooms');
    expect(data.chatrooms).to.be.an('array');
  });
  
  test("Data has pagination fields", function() {
    const data = res.getBody().data;
    expect(data).to.have.property('total');
    expect(data).to.have.property('count');
    expect(data).to.have.property('hasMore');
    expect(data.total).to.be.a('number');
    expect(data.count).to.be.a('number');
    expect(data.hasMore).to.be.a('boolean');
  });
}
