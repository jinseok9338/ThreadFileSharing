meta {
  name: Refresh access token
  type: http
  seq: 5
}

post {
  url: {{baseUrl}}/api/v1/auth/refresh
  body: json
  auth: none
}

body:json {
  {
    "refreshToken": "{{refreshToken}}"
  }
}

assert {
  res.status: eq 200
  res.body.accessToken: isDefined
  res.body.refreshToken: isDefined
}

tests {
  test("Should return new access token", function() {
    expect(res.body.accessToken).to.be.a("string");
    expect(res.body.accessToken).to.not.equal(bru.getEnvVar("accessToken"));
  });
  
  test("Should return new refresh token (rotation)", function() {
    expect(res.body.refreshToken).to.be.a("string");
    expect(res.body.refreshToken).to.not.equal(bru.getEnvVar("refreshToken"));
  });
}

script:post-response {
  // Update tokens for subsequent tests
  bru.setEnvVar("accessToken", res.body.accessToken);
  bru.setEnvVar("refreshToken", res.body.refreshToken);
}

