meta {
  name: DELETE /api/v1/threads/{id} - Delete Thread (Owner)
  type: http
  seq: 149
}

delete {
  url: {{baseUrl}}/api/v1/threads/{{threadId}}
  body: none
  auth: bearer
}

auth:bearer {
  token: {{ownerAccessToken}}
}

tests {
  test("Status code is 204 for successful thread deletion", function() {
    expect(res.getStatus()).to.equal(204);
  });
  
  test("Response body is empty", function() {
    expect(res.getBody()).to.be.empty;
  });
  
  test("Response time is under 1 second", function() {
    expect(res.getResponseTime()).to.be.lessThan(1000);
  });
}


