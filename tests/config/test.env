# Test Environment Configuration for WebSocket and API Integration Testing

# Backend API Configuration
API_BASE_URL=http://localhost:3001/api/v1
WEBSOCKET_URL=ws://localhost:3001

# Test Configuration
TEST_TIMEOUT=30000
TEST_RETRY_COUNT=3
TEST_PARALLEL_LIMIT=10

# Performance Thresholds
API_RESPONSE_THRESHOLD=500
WEBSOCKET_DELIVERY_THRESHOLD=100
CONCURRENT_USERS_THRESHOLD=100
CONNECTION_RECOVERY_THRESHOLD=30000
MEMORY_USAGE_THRESHOLD=50

# Test Data Management
USE_FIXTURES=true
GENERATE_DYNAMIC_DATA=true
CLEANUP_AFTER_TESTS=true
TEST_DATA_ISOLATION=true

# Database Configuration
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=threadfilesharing_test
TEST_DB_USER=postgres
TEST_DB_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=test-files

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=tests/logs/integration-test.log
LOG_FORMAT=json

# Reporting Configuration
REPORT_FORMAT=json
REPORT_OUTPUT=tests/reports/
REPORT_INCLUDE_PERFORMANCE=true
REPORT_INCLUDE_COVERAGE=true

# WebSocket Configuration
WEBSOCKET_RECONNECTION_ATTEMPTS=5
WEBSOCKET_RECONNECTION_DELAY=1000
WEBSOCKET_HEARTBEAT_INTERVAL=30000

# Integration Test Configuration
INTEGRATION_TEST_MODE=comprehensive
INTEGRATION_TEST_PHASES=5
INTEGRATION_TEST_PARALLEL=true
INTEGRATION_TEST_VALIDATION=true

# Security Configuration
JWT_SECRET=test-jwt-secret-key-for-integration-testing
JWT_EXPIRATION=3600
BCRYPT_ROUNDS=10

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif
CHUNK_SIZE=1048576
UPLOAD_TIMEOUT=300000

# Error Handling Configuration
ERROR_RETRY_ATTEMPTS=3
ERROR_RETRY_DELAY=1000
ERROR_LOG_LEVEL=error
ERROR_NOTIFICATION=true
