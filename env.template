# Environment Variables Template
# Copy this file to .env.local, .env.development, .env.staging, .env.production
# and update the values according to your environment

# Environment
NODE_ENV=local

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=dev_password
DATABASE_NAME=threadfilesharing_local

# MinIO Configuration (Local Development)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET_NAME=threadfilesharing-local
MINIO_USE_SSL=false

# AWS S3 Configuration (for production compatibility)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
S3_BUCKET_NAME=threadfilesharing-production

# File Upload Configuration
MAX_FILE_SIZE=10737418240  # 10GB in bytes
ALLOWED_FILE_TYPES=image/*,video/*,audio/*,application/pdf,text/*,application/zip,application/x-zip-compressed
UPLOAD_CHUNK_SIZE=10485760  # 10MB chunks

# Storage Quota Configuration
DEFAULT_STORAGE_LIMIT=5368709120  # 5GB default per company
STORAGE_WARNING_THRESHOLD=0.8  # 80% usage warning

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Server Configuration
PORT=3001
CORS_ORIGIN=http://localhost:3000
BACKEND_BASE_URL=http://localhost:3001
FRONTEND_BASE_URL=http://localhost:3000

# File Processing Configuration
ENABLE_FILE_PROCESSING=true
ENABLE_VIRUS_SCANNING=false  # Disabled for local development
ENABLE_THUMBNAIL_GENERATION=true

# WebSocket Configuration
WEBSOCKET_PORT=3001
ENABLE_WEBSOCKET=true

# Logging Configuration
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true
